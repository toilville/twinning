# Twinning Intelligence Service Configuration

# Service Configuration
NODE_ENV=development
PORT=3002
SERVICE_NAME=intelligence
LOG_LEVEL=info

# Twinning Core Integration
TWINNING_CORE_URL=http://localhost:3000
TWINNING_API_KEY=your-twinning-api-key

# Notion API Configuration
NOTION_API_TOKEN=your-notion-api-token
NOTION_CONTACTS_DATABASE_ID=your-contacts-database-id
NOTION_PEOPLE_DATABASE_ID=your-people-database-id

# Apple Mail Integration (macOS only)
APPLE_MAIL_ENABLED=true
APPLE_MAIL_ACCOUNT=your-mail-account

# MCP Server Configuration
MCP_SERVERS_ENABLED=true
MCP_APPLE_SERVER_URL=http://localhost:3100
MCP_NOTION_SERVER_URL=http://localhost:3101
MCP_GITHUB_SERVER_URL=http://localhost:3102

# AI Provider Configuration (Optional)
AI_PROVIDER=anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
LOCAL_LLM_URL=http://localhost:11434

# SPELWork Ethical Framework
ETHICS_ENABLED=true
ETHICS_TRUST_THRESHOLD=0.7
ETHICS_REQUIRE_HUMAN_REVIEW=false
ETHICS_BIAS_DETECTION=true

# Performance Configuration
CONTACT_PROCESSING_RATE_LIMIT=65
BATCH_SIZE=100
MAX_CONCURRENT_OPERATIONS=10

# Data Storage (Optional - for local caching)
DATA_STORAGE_PATH=./data
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
PROMETHEUS_METRICS_PATH=/metrics

# Security
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=900000

# Development/Debug
DEBUG_MODE=false
VERBOSE_LOGGING=false
DRY_RUN_MODE=false
